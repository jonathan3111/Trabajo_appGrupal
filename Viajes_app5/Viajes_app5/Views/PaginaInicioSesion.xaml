<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Viajes_app5.Views.PaginaInicioSesion">
    <StackLayout>
        <Label Text="Inicio de Sesión" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,10" />

        <Entry Placeholder="Correo" x:Name="CorreoEntry" />
        <Entry Placeholder="Contraseña" x:Name="ContraseñaEntry" IsPassword="True" />

        <Button Text="Iniciar Sesión" Clicked="OnIniciarSesionButtonClicked" />
        <Button Text="Registrarse" Clicked="OnRegistrarseButtonClicked" />
    </StackLayout>
</ContentPage>